<%- include('../partials/header.ejs') %>
    <div class="wrapper">
        <div class="users">
            <!-- TODO: add mods, modpacks and posts -->
            <div class="username">
                <div class="avatar">
                    <img src="https://cdn.discordapp.com/avatars/<%= requestedUser.discordId%>/<%= requestedUser.avatar%>" />
                    <div class="title">
                        <% let username = requestedUser.username + (requestedUser.settings.publicTag ? "#"+requestedUser.tag:"") %>
                            <%=username %>
                    </div>
                </div>
            </div>

            <div class="description">
                <%- description %>
            </div>
        </div>
    </div>
